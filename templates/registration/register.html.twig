{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
 {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('registerform/fonts/material-icon/css/material-design-iconic-font.min.css') }}">
    <link rel="stylesheet" href="{{ asset('registerform/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

{% endblock %}

{% block body %}
    <h1>Register</h1>

     <div class="main">

        <section class="signup" >
            <!-- <img src="images/signup-bg.jpg" alt=""> -->
            <div class="container">
                <div class="signup-content" >
                    {# <form method="POST" id="signup-form" class="signup-form"> #}
                    {{ form_start(registrationForm) }}
                        <h2 class="form-title">Create account</h2>
                        
                         <div class="form-group">
                             {{ form_widget(registrationForm.email) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_widget(registrationForm.nom) }}
                        </div>
                         
                         <div class="form-group">
                            {{ form_widget(registrationForm.prenom) }}
                        </div>
                        
                         <div class="form-group">
                            {{ form_widget(registrationForm.adresse) }}
                        </div>
                       
                    
                        <div class="form-group">
                            <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                            
                            {{ form_widget(registrationForm.password) }}

     
                        </div>
                        {# <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                             {{ form_row(registrationForm.agreeTerms) }}
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div> #}
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up"/>
                        </div>
                         {{ form_end(registrationForm) }}
                    <p class="loginhere">
                        Have already an account ? <a href="#" class="loginhere-link">Login here</a>
                    </p>
                </div>
            </div>
        </section>

    </div>




{% endblock %}

{% block javascripts %}
            <script src="{{ asset('registerform/vendor/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('registerform/js/main.js') }}"></script>
        {% endblock %}