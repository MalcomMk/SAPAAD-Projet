{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation</th>
                <th>Precisions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.creation ? demande.creation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ demande.precisions }}</td>
                <td>
                    <a href="{{ path('user_demande_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('user_demande_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_demande_new') }}">Create new</a>
{% endblock %}
