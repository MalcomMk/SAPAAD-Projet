{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}


 <main role="main">

      <section class="jumbotron text-center mt-5">
        <div class="container">
          <h1 class="jumbotron-heading color mb-4">Catalogue</h1>
          <p class="lead text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed non risus. 
          Suspendisse lectus tortor, dignissim sit amet, adipiscing nec, ultricies sed, dolor. Cras elementum ultrices diam.
           Maecenas ligula massa, varius a
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            {% for service in services %}
                <div class="col-md-4">
                  <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="/uploads/{{ service.illustration }}" alt="Card image cap">
                    <div class="card-body">
                    <p class="font-weight-bold color">{{ service.nom }}<p>
                      <p class="card-text">
                        {{ service.description }}                      
                      </p>
                    </div>
                  </div>
                </div>
            {% endfor %}
          </div>
        </div>
      </div>

    </main>


{% endblock %}
